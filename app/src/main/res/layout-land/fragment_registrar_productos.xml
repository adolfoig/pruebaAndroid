<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/idProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Id del Producto"
        android:inputType="text" />

    <EditText
        android:id="@+id/nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Producto"
        android:inputType="text" />

    <EditText
        android:id="@+id/tipoProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo del Producto"
        android:inputType="text" />

    <EditText
        android:id="@+id/descripcionProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del Producto"
        android:inputType="text" />

    <EditText
        android:id="@+id/precioProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio del Producto"
        android:inputType="numberDecimal" />

    <!-- ImageView para mostrar la imagen seleccionada -->
    <ImageView
        android:id="@+id/imagenProducto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:contentDescription="Imagen seleccionada" />

    <!-- Botón para seleccionar la imagen -->
    <Button
        android:id="@+id/btnSubirImagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Imagen" />

    <!-- Botón para registrar el producto -->
    <Button
        android:id="@+id/btnRegistrarProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Producto" />

</LinearLayout>
