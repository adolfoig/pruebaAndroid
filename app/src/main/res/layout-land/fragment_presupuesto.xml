<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.clases.presupuesto.PresupuestosFragment">

    <!-- Contenedor del tÃ­tulo y botÃ³n + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- TÃ­tulo "Presupuesto" -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Presupuesto"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- BotÃ³n "+" -->
        <ImageView
            android:id="@+id/addButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_mas"
            android:contentDescription="Agregar presupuesto"
            android:padding="4dp"/>
    </LinearLayout>

    <!-- Barra de bÃºsqueda -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:hint="ðŸ” Buscar Presupuesto"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <!-- Lista de presupuestos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPresupuestos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp" />
</LinearLayout>
