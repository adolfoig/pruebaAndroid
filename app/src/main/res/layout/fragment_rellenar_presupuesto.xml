<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.clases.presupuesto.RellenarPresupuestoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Título -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Rellenar Presupuesto"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

        <!-- Número del presupuesto -->
        <EditText
            android:id="@+id/etNumeroPresupuesto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            android:hint="Nª: "
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Fecha del presupuesto -->
        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            android:hint="Fecha (dd/mm/aaaa)"
            android:inputType="date"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Nombre del Cliente -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            android:hint="Nombre del Cliente"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Apellido del Cliente -->
        <EditText
            android:id="@+id/etApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            android:hint="Apellidos del Cliente"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Correo del Cliente -->
        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Descripción del Presupuesto -->
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@android:color/darker_gray"
            android:hint="Descripción del Presupuesto"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Sección Productos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Productos"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray" />

        <!-- ID del Producto -->
        <EditText
            android:id="@+id/etIdProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@android:color/darker_gray"
            android:hint="ID del Producto"
            android:inputType="number"
            android:padding="12dp"
            android:textSize="16sp" />

        <!-- Cantidad y Precio Unitario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etCantidad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/darker_gray"
                android:hint="Cantidad"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="16sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Botón Calcular -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="12dp"
            android:text="Calcular Total"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

</LinearLayout>
