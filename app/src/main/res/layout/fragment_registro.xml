<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_medio_oscuro"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.RegistroFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginBottom="24dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="REGISTRATE"
        android:textColor="@color/azul"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="3dp"
        android:background="@drawable/rounded_background"
        android:shadowColor="@color/azul"
        android:shadowDx="0"
        android:shadowDy="40"
        android:shadowRadius="25"/>
</androidx.cardview.widget.CardView>

    <!-- Nombre de Usuario -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/white"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Nombre de Usuario"
            app:hintTextColor="@color/gris_claro"
            android:inputType="textPersonName"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Correo Electrónico -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/white"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmailUsuario"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Correo Electrónico"
            app:hintTextColor="@color/gris_claro"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/white"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etContraseñaUsuario"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Contraseña"
            app:hintTextColor="@color/gris_claro"
            android:inputType="textPassword"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Repetir Contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/white"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmarContraseñaUsuario"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Repetir Contraseña"
            app:hintTextColor="@color/gris_claro"
            android:inputType="textPassword"
            android:textColor="@color/black"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Imagen de Perfil -->
    <ImageView
        android:id="@+id/ivImagenPerfilUsuario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:contentDescription="Imagen de perfil"
        android:layout_marginBottom="10dp"/>

    <!-- Botón para subir imagen -->
    <Button
        android:id="@+id/btnSubirImagenPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige una foto de perfil"
        android:backgroundTint="@color/azul"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        app:cornerRadius="8dp"/>

    <!-- Botón de Registro -->
    <Button
        android:id="@+id/btnRegistrarUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:backgroundTint="@color/azul"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        app:cornerRadius="8dp"/>
</LinearLayout>